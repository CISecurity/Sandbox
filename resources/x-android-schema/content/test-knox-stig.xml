    <definition id="oval:test.android.knox.stig:def:1200" version="1" class="compliance">
      <metadata>
        <title>The mobile operating system must include organization defined additional, more detailed information in the audit records for audit events identified by type, location, or subject.</title>
        <affected family="unix">
          <platform>Android</platform>
        </affected>
        <reference source="DISA" ref_id="KNOX-04-001200"/>
        <description/>
      </metadata>
      <criteria operator="AND">
        <criterion comment="Verify that USB debugging is disabled." test_ref="oval:test.android.knox.stig:tst:1200"/>
        <!-- The STIG states to check that a policy is in place on the device requiring USB debugging to be disabled.  Such a policy
                is Knox-specific, so we have no check for that here.  Instead we just check that USB debugging is currently disabled at the time of check. -->
      </criteria>
    </definition>
